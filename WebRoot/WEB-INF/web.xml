<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	
  <welcome-file-list>
    <welcome-file>/jsp/login.jsp</welcome-file>
  </welcome-file-list>
  
  <context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:applicationContext.xml</param-value>
	</context-param>
	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener> 
  
  	<!-- struts2的过滤器配置（顺序不可变） -->
    <filter>
  		<filter-name>struts2</filter-name>
  		<filter-class>org.gb.filter.ExtendStrutsFilter</filter-class>
  	</filter>
  
  	<!-- encoding filter 解决struts2转递参数的乱码-->  
	<filter>  
	    <filter-name>CharacterEncoding</filter-name>  
	    <filter-class>org.gb.tool.SetCharacterEncodingFilter</filter-class>  
	    <init-param>  
	        <param-name>encoding</param-name>  
	        <param-value>utf-8</param-value>  
	    </init-param>  
	</filter>  
	<filter-mapping>  
	    <filter-name>CharacterEncoding</filter-name>  
	    <url-pattern>/*</url-pattern>  
	</filter-mapping>
  
	<!-- OpenSessionInView配置 -->
	<filter>  
	    <filter-name>openSessionInViewFilter</filter-name>  
	    <filter-class>  
	        org.springframework.orm.hibernate3.support.OpenSessionInViewFilter  
	    </filter-class>
	    <init-param>
            <param-name>sessionFactoryBeanName</param-name>
            <param-value>sessionFactory</param-value>
        </init-param>
        <init-param>
            <param-name>singleSession</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>flushMode</param-name>
            <param-value>AUTO</param-value>
        </init-param>
	</filter>  
	<filter-mapping>  
	    <filter-name>openSessionInViewFilter</filter-name>  
	    <url-pattern>/*</url-pattern>  
	</filter-mapping>
	
	
	<!-- struts2配置（过滤器路径） -->
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!-- 配置initialServlet在服务器启动时启动 -->
	<servlet>
      <servlet-name>initialServlet</servlet-name>
      <servlet-class>org.gb.tool.InitialServlet</servlet-class>
      <load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>initialServlet</servlet-name>
		<url-pattern>/initialServlet</url-pattern>
	</servlet-mapping> 
  
  
</web-app>
